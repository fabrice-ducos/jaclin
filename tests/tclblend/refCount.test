if {[lsearch [namespace children] ::tcltest] == -1} {
    package require tcltest
    namespace import -force ::tcltest::*
}

setupJavaPackage

test refcount-1.1 {Tcl_Obj.refCount} {
    set obj mystring
    btest refcount $obj
} 1

test refcount-1.2 {Tcl_Obj.refCount} {
    set obj mystring
    set copy $obj
    btest refcount $obj
} 2

test refcount-1.3 {Tcl_Obj.refCount} {
    set obj1 mystring
    set obj2 [format %s $obj1]
    list [btest refcount $obj1] \
         [btest refcount $obj2]
} {1 1}

test refcount-1.4 {Tcl_Obj.refCount for a TclObject} {
    set obj1 [java::new String mystring]
    set obj2 [format %s $obj1]
    java::isnull $obj2
    list [btest refcount $obj1] \
         [btest refcount $obj2]
} {1 1}
